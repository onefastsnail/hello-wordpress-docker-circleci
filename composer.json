{
  "name": "onefastsnail/hello-wordpress-docker-circleci",
  "type": "project",
  "description": "A Wordpress project",
  "homepage": "https://www.onefastsnail.com/",
  "authors": [
    {
      "name": "Paul Stewart",
      "email": "paul@onefastsnail.com",
      "homepage": "https://www.onefastsnail.com"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": ">=7.1.0",
    "composer/installers": "*",
    "johnpbloch/wordpress-core-installer": "*",
    "johnpbloch/wordpress-core": "^5",
    "wpackagist-plugin/fakerpress": "*",
    "wpackagist-plugin/redis-cache": "*"
  },
  "extra": {
    "wordpress-install-dir": "vendor/wordpress",
    "installer-paths": {
      "src/wp-content/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "src/wp-content/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "src/wp-content/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    }
  }
}
